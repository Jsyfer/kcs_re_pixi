{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist"
  ]
}